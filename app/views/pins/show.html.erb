<%= link_to pins_path do %>
<span class="glyphicon glyphicon-arrow-left">Back</span>
<% end %>

<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<div class="center">
			<h1><%= @pin.description %></h1>
		</div>
		<div class="panel panel-default">
		<div class="panel-heading center">
			<%= image_tag @pin.image.url(:medium) %>
		</div>

		<div class= "panel-body center">
		<p><%= @pin.user.email if @pin.user %>
		<% if @pin.user == current_user %>
			<%= link_to edit_pin_path(@pin) do %>
			<span class="glyphicon glyphicon-edit">Edit</span>
			<% end %></p>
			<%= link_to raw('<span class="glyphicon glyphicon-headphones"></span> Listen'), edit_pin_path, class: "btn btn-primary btn-lg" %>
		<% end %>
		</div>

	</div>
</div>

